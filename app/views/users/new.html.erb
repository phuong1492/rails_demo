<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages'%>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-controller'%>

		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-controller' %>

		<%= f.label :password %>
		<%= f.password_field :password, class: 'form-controller' %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation , class: 'form-controller'%>

		<%= f.submit "Create my account", class: "btn btn-primary" %>
		<% end %>		
	</div>	
</div>
